{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./lib",
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "./dependencies/nodejs/node_modules",
    "typeRoots": [
      "dependencies/nodejs/node_modules/@types"
    ],
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dependencies",
    "**/*.spec.ts"
  ]
}